<%- include("partials/header.ejs") %>
<main>
    <h1 class="page-title">Home</h1>
    <p>
        <%= homeStartingContent %>
    </p>
    <% posts.forEach(post => { %>
    <div class="blog-post">
        <h1 class="post-title">
            <%= post.title %>
        </h1>
        <p>
            <%= post.content.substring(0, 100) %>...
            <a href="/posts/<%= post.title %>">Read more</a>
        <p>
    </div>
    <% }) %>
</main>
<%- include("partials/footer.ejs") %>